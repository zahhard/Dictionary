            android:id="@+id/imageView_edit"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_baseline_edit_24"
            app:tint="#2E7D32" />

        <ImageView
            android:id="@+id/imageView_delete"
            android:layout_width="40dp"
